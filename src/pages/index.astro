        content: "";
        width: 60px;
        height: 60px;
        background: #d4a154;
        border-radius: 50%;
        position: absolute;
      }

      .loading-heart:before {
        top: -30px;
        left: 0;
      }

      .loading-heart:after {
        top: 0;
        left: -30px;
      }

      @keyframes heartbeat {
        0%,
        100% {
          transform: rotate(45deg) scale(1);
        }
        50% {
          transform: rotate(45deg) scale(1.1);
        }
      }

      /* Estilos para mejor rendimiento */
